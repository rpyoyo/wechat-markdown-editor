ARG VER_NGX=1.21.6-alpine

# Nginx production image with pre-built static files
FROM --platform=$TARGETPLATFORM nginx:$VER_NGX

LABEL MAINTAINER="rpyoyo"

# Copy pre-built static files from local dist directory
# Run 'pnpm build' locally in apps/web before building this image
COPY apps/web/dist /usr/share/nginx/html

EXPOSE 80

CMD ["nginx", "-g", "daemon off;"]
